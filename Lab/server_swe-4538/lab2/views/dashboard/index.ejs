<%- include('../partials/header.ejs') %> <%- include('../partials/navbar.ejs')
%>

<section class="max-w-7xl mx-auto py-8">
  <h2 class="text-2xl font-semibold mb-4">Your Personalized Anime List</h2>

  <% if (animes.length > 0) { %>
  <div
    class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6"
  >
    <% animes.forEach(anime => { %>
    <div class="bg-white shadow-md rounded-lg p-4">
      <img
        src="<%= anime.anime_img %>"
        alt="<%= anime.anime_name %>"
        class="w-full h-48 object-cover rounded-t-lg"
      />
      <h3 class="text-xl font-semibold mt-2"><%= anime.anime_name %></h3>
      <p class="text-gray-500 text-sm mt-1"><%= anime.description %></p>
      <a
        href="/animes/<%= anime.anime_id %>"
        class="text-rose-600 hover:text-rose-700 hover:underline text-sm mt-2 inline-block"
        >View Details &rarr;</a
      >
    </div>
    <% }) %>
  </div>
  <% } else { %>
  <p class="text-lg text-gray-500">
    You haven't selected any preferences yet. Please select tags to get
    personalized recommendations.
  </p>
  <% } %>
</section>

<%- include('../partials/footer.ejs') %>
