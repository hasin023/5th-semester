<%- include('../partials/header.ejs') %> <%- include('../partials/navbar.ejs')
%>

<section class="max-w-7xl mx-auto py-8">
  <h2 class="text-2xl font-semibold mb-6">Your Personalized Anime List</h2>

  <% if (animes.length > 0) { %>
  <div
    class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8"
  >
    <% animes.forEach(anime => { %>
    <div
      class="bg-white shadow-lg rounded-lg overflow-hidden transition-transform transform hover:scale-105"
    >
      <img
        src="/<%= anime.anime_img %>"
        alt="<%= anime.anime_name %>"
        class="w-full h-64 object-cover"
      />
      <div class="p-4">
        <h3 class="text-xl font-semibold text-gray-800">
          <%= anime.anime_name %>
        </h3>
        <p class="text-gray-600 text-sm mt-1"><%= anime.description %></p>
        <a
          href="/animes/<%= anime.anime_id %>"
          class="mt-3 inline-block bg-rose-600 text-white hover:bg-rose-700 px-4 py-2 rounded transition"
          >View Details &rarr;</a
        >
      </div>
    </div>
    <% }) %>
  </div>
  <% } else { %>
  <p class="text-lg text-gray-500">
    You haven't selected any preferences yet. Please select tags to get
    personalized recommendations.
  </p>
  <% } %>
</section>

<%- include('../partials/footer.ejs') %>
